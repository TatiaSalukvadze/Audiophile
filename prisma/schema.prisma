generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id          String   @id @default(uuid()) // Use UUIDs for ID
  email       String   @unique
  firstName   String?
  lastName    String?
  imageUrl    String?
  clerkUserId String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
